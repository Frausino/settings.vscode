{
  // ========================================
  // üé® APAR√äNCIA E TEMA
  // ========================================
  "workbench.colorTheme": "SynthWave '84",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.editorAssociations": {
    "*.js": "default"
  },
  "workbench.settings.applyToAllProfiles": ["editor.defaultFormatter"],
  "window.zoomLevel": 0,

  // ========================================
  // ‚úèÔ∏è EDITOR GERAL
  // ========================================
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": true,
  "editor.suggestSelection": "first",

  // ========================================
  // üìù SPELL CHECKER - DESATIVADO
  // ========================================
  "cSpell.enabled": false,
  "cSpell.enableFiletypes": [
    "!javascript",
    "!typescript",
    "!javascriptreact",
    "!typescriptreact",
    "!vue"
  ],

  // ========================================
  // üìÅ ARQUIVOS E EXPLORER
  // ========================================
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // ========================================
  // üêç PYTHON
  // ========================================
  "python.languageServer": "Pylance",
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoImportCompletions": true,
  "python.formatting.provider": "black",
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.pylintEnabled": false,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },

  // ========================================
  // ‚öõÔ∏è JAVASCRIPT E REACT
  // ========================================
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue"
  ],
  "[javascript]": {
    "editor.maxTokenizationLineLength": 2500,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ========================================
  // üé® TAILWIND CSS
  // ========================================
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.includeLanguages": {
    "plaintext": "html",
    "vue": "html"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ========================================
  // üíö VUE.JS
  // ========================================
  "vue.languageFeatures.codeActions": true,
  "vue.languageFeatures.updateImportsOnFileMove.enabled": "always",
  "[vue]": {
    "editor.defaultFormatter": "Vue.volar"
  },

  // ========================================
  // üìä JUPYTER NOTEBOOKS
  // ========================================
  "jupyter.askForKernelRestart": false,
  "jupyter.logging.level": "error",

  // ========================================
  // üåê LIVE SERVER E DESENVOLVIMENTO WEB
  // ========================================
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.port": 0,
  "liveServer.settings.CustomBrowser": "chrome",

  // ========================================
  // üîß GIT E CONTROLE DE VERS√ÉO
  // ========================================
  "git.suggestSmartCommit": false,
  "git.confirmSync": false,
  "git.autofetch": true,

  // ========================================
  // üíª TERMINAL
  // ========================================
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.pasteOnDrop": false,
  "terminal.integrated.drawBoldTextInBrightColors": true,
  "terminal.integrated.minimumContrastRatio": 4.5,
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  // ========================================
  // üìÑ FORMATA√á√ÉO POR TIPO DE ARQUIVO
  // ========================================
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ========================================
  // üöÄ EMMET E AUTOCOMPLETE
  // ========================================
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "vue-html": "html",
    "plaintext": "html"
  },
  "emmet.triggerExpansionOnTab": true,

  // ========================================
  // üîç BUSCA E NAVEGA√á√ÉO
  // ========================================
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/dist": true,
    "**/build": true,
    "**/.next": true,
    "**/.nuxt": true
  }
}
